{% extends 'base.html.twig' %}

{% block title %}Récapitulatif de commande - La Fourchette Victorieuse{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/order/summary.css') }}">
{% endblock %}

{% block body %}
<section id="summary">
    <h1>Récapitulatif de commande</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="bg-light p-3">
                    <strong>Contenu de mon panier :</strong>
                    {% for item in cart %}
                    <div class="row mb-2">
                        <div class="col-md-2">
                            <img class="img-fluid" src="/image/uploads/{{item.object.image}}" alt="{{item.object.name}}">
                        </div>
                        <div class="col-md-5">
                            <strong>{{item.object.name}}</strong>
                            <span class="d-block small">Prix unitaire TTC : {{item.object.priceWt|price}}</span>
                        </div>
                        <div class="col-md-3 text-right d-flex f-row">
                            <span class="badge text-bg-dark item-qty">x{{item.qty}}</span>
                        </div>
                        <div class="col-md-2">
                            <span class="small">Prix Total TTC : <strong>{{ (item.qty * item.object.priceWt)|price }}</strong></span>
                        </div>
                    </div>
                    {% endfor %}    
                </div>
                <div class="bg-light p-3 my-3">
                    <strong>Votre adresse de livraison :</strong> <br>
                    <strong>{{ choices.addresses.lastname }} {{ choices.addresses.firstname }}</strong><br>
                    {{ choices.addresses.address }}<br>
                    {{ choices.addresses.postal }} {{ choices.addresses.city }}<br>
                    {{ choices.addresses.country }}
                </div>

                <div class="bg-light p-3">
                    <strong>Formule de livraison :</strong> <br>
                    {{ choices.carriers.name }} <br>
                    {{ choices.carriers.description }} <br>
                    {{ choices.carriers.price|price }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="bg-light p-3">
                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">Total produit(s) :</span>
                        <span>{{ cartQty }}</span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">Total transporteur :</span>
                        <span>{{ choices.carriers.price|price }}</span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">Total commande T.T.C :</span>
                        <span>{{ (totalWt + choices.carriers.price)|price}}</span>
                    </div>
                    <a href="" class="btn btn-success w-100 mt-3">Payer</a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}