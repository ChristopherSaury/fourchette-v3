<div class="row">
    <h2 class="mt-4">Nos Entrées</h2>
    {% for starter in starters %}
    <div class="grid-item col-lg-4 mt-4 col-md-6 col-sm-12 col-xs-12">
        <a href="{{path('app_dish_details', {'dish_slug': starter.slug })}}" class="dish-link">
            <img src="{{ asset('image/uploads/') }}{{starter.image}}" alt="{{starter.name}}">
            <h2 class="text-center dish-title">{{ starter.name }}</h2>
            <span class="text-center">{{ starter.priceWt|price }}</span>
        </a>
    </div>
    {% endfor %}
    <a href="{{path('app_dish_category', {slug: 'entree'})}}">+ d'Entrées</a>
</div>